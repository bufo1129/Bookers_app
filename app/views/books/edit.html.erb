<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div>
  <ul>
    <h2><%= @book.errors.count %> errors occurred.</h2>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @book do |f| %>

<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

  <%= link_to "Show", book_path(@book.id) %>
    |
  <%= link_to "Back", book_path(@book.id) %>

