<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<div>
  <ul>
    <h5><%= @book.errors.count %> error occurred.</h5>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
</div>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>

  <p>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Edit", book_path(@book.id) %>
  </p>



<% end %>