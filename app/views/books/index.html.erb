<body>

  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure you want to permanently delete thisï¼Ÿ" %></td>
      </tr>
      <% end %>
     </tbody>
  </table>

  <h2>New book</h2>

<% if @book.errors.any? %>
<div>
  <ul>
    <h2><%= @book.errors.count %> errors occurred.</h2>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <%= form_with model: Book.new do |f| %>
  <form class="new_book" id="new_book" action="/books">
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  </form>
  <% end %>
</body>

