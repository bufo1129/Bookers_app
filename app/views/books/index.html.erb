<h1>Books</h1>

 <table>

    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

<% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure you want to permanently delete thisï¼Ÿ" %></td>
      </tr>
    </tbody>
<% end %>

  </table>

  <h2>New book</h2>

<% if @book.errors.any? %>
<div>
  <ul>
    <h5><%= @book.errors.count %> errors occurred.</h5>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: Book.new do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>

<% end %>